int     sub_set(char **expr)
{
    int     pos;
    int     count;
    char    *sub;
    int     result;

    pos = 0;
    count = 1;
    (*expr)++;
    while (count > 0)
    {
        if (*(*expr + pos) == '(')
            count++;
        else if (*(*expr + pos) == ')')
            count++;
        pos++;
    }
    sub =  (char*)malloc(sizeof(char) * (pos + 1));
    sub[pos + 1] = '\0';
    sub =  ft_strncat(sub, *(expr), pos);
    result = Calc_Summands(sub);
    free(sub);
    return (result);
}
